<div class="flex min-h-full flex-col justify-center px-6 py-36 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag("logos/logo.png", class: "mx-auto h-10 w-auto", alt: "Logo of DiveSitesFinder") %>
    <h1 class="heading-1 mt-10 text-center text-2xl"><%= t(".title") %></h1>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div>
        <label for="email" class="block text-sm font-medium leading-6 text-dark-blue"><%= t(".email") %></label>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(".email_placeholder"), required: true, class: "input w-full" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm font-medium leading-6 text-dark-blue"><%= t(".password") %></label>
          <div class="text-sm">
            <%= link_to(t(".forgot_password"), new_user_password_path(resource_name), class: "font-semibold text-main-sky hover:text-sky-400") %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "**********", required: true, class: "input w-full" %>
        </div>
      </div>

      <div>
        <%= f.button t(".sign_in"), class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
