<header class="absolute inset-x-0 top-0 z-50" data-controller="menu">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">website name</span>
        <%= image_tag("logos/logo.png", class: "h-8 w-auto", alt: "Website's logo") %>
      <% end %>
    </div>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" data-action="click->menu#toggleMenu">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="#" class="mr-4 hover:underline md:mr-6">Feature</a>
      <a href="#" class="mr-4 hover:underline md:mr-6">Pricing</a>
      <a href="#" class="mr-4 hover:underline md:mr-6">About</a>
      <a href="#" class="mr-4 hover:underline md:mr-6">Contact</a>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-12">
      <% if user_signed_in? %>
        <%= link_to("My account", edit_user_registration_path, class: "text-sm font-semibold leading-6 text-gray-900 py-3") %>
      <% else %>
        <%= link_to("Sign in", new_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900 py-3") %>
        <%= link_to(new_user_registration_path, class: "btn btn-primary py-3") do %>
          Sign up <span aria-hidden="true">&rarr;</span>
        <% end %>
      <% end %>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="hidden" data-menu-target="menu" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">divesitesfinder</span>
          <%= image_tag("logos/logo.png", class: "h-8 w-auto", alt: "divesitesfinder.com logo") %>
        </a>
        <button type="button" data-action="click->menu#toggleMenu" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Something</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Pricing</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">About</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Contact</a>
          </div>
          <div class="py-6 w-100">
            <a href="#" class="btn btn-primary block -mx-3 text-base">Sign up <span aria-hidden="true">&rarr;</span></a>
            <a href="#" class="block link -mx-3 rounded-lg mt-3 px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50 text-center">Log in</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
